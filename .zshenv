# Manually set language environment to en_US.UTF-8
export LC_ALL=en_US.UTF-8

# Specify your preferred terminal emulator
export TERMINAL=kitty

# History configuration
export HISTFILE=~/.zsh_history   # Specify the location of the history file
export HISTSIZE=1000             # Limit the number of history entries in memory
export SAVEHIST=1000             # Limit the number of history entries to save